<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/bus_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="159dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Bus no" />

    <Button
        android:id="@+id/btn_busno_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Submit"
        android:layout_below="@+id/bus_no"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/add_bus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_busno_submit"
        android:layout_below="@+id/btn_busno_submit"
        android:layout_marginTop="44dp"
        android:text="Add bus" />
</RelativeLayout>